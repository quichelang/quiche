
def test_ownership_transfer():
    # Variable 's' used twice. 
    # First use: borrow (or clone if needed).
    # Last use: move.
    
    s = "Hello"
    
    # First use (non-terminal)
    l = s.len() 
    assert l == 5
    
    # Last use (terminal) - should move 's'
    s2 = s
    assert s2 == "Hello"

def test_loop_no_move():
    # Variable used in loop must NOT be moved in body
    x = "Loop"
    i = 0
    while i < 2:
        # 'x' used here. Should be borrowed/cloned, NOT moved.
        y = x
        i = i + 1

def main():
    test_ownership_transfer()
    test_loop_no_move()
    print("Lifecycle tests passed")
